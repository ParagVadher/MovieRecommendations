<html>
    <head>
        <title><%= locals.title %></title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <!-- third party styling -->
        <script src="https://kit.fontawesome.com/62de8261c3.js" crossorigin="anonymous"></script>

        <div id="box">
        <!-- personal styling -->
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            Movie Recommendations
        </h1>

        <form action="create_movie" method="post">
            <table>
                <tr>
                    <td colspan="2" class="input-wrapper">
                        <label for="description">MOVIE NAME</label>
                        <input type="text" name="name" class="inputza" width="100%" required>
                    </td>
                </tr>

                <tr>
                    <td class="input-wrapper">
                        <label for="category">CHOOSE A GENRE</label>
                        <select id="genre" name="genre" class="row2">
                            <option value="drama">DRAMA</option>
                            <option value="scifi">SCI-FI</option>
                            <option value="horror">HORROR</option>
                            <option value="comedy">COMEDY</option>
                            
                            <option value="action">ACTION</option>
                            
                        </select>
                    </td>
                    
                    <td class="input-wrapper">
                        <label for="Date">DUE DATE</label>
                        <input type="date" class="row2" name="dates">
                    </td>
                </tr>
            </table>
            <div class="groupbuttons">
                <div class="add-delete-button0">
                    <button type="submit" class="add-button0">
                        ADD <i class="fas fa-plus"></i>
                    </button>
                    <button type="submit" class="delete-button0" form="movie-list-form">
                        REMOVE <i class="fas fa-minus"></i>
                    </button>
                </div>
    
            </div>
        </form> 

        <div class="center">
            <ul>
                <form action="delete_movie" method="post" id="movie-list-form">
                    <% for ( let i of movie_list) { %>
                    <li class="movie">
                        <div class="flex-container">
                            <input id="check" class="check" type="checkbox" name="id" value="<%= i.id %>" >
                                <div class="smol">
                                    <p class="flex-item"><%= i.name %></p>
                                    <i class="fas fa-calendar-alt" style="color: white;"></i>
                                    <span> <%= i.date %> </span>
                                </div>
                            <button type="button" style="margin-top: 10px; background-color: <%= color_list[i.genre] %>;"> <%= i.genre %> </button>
                        </div>
                    </li>
                    <% } %>
                </form>
            </ul>
        </div>

        <script type="text/javascript" src="/js/home.js"></script>
    </div>
    </body>
</html>